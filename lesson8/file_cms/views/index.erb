<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Index</title>
    <meta charset="utf-8">
  </head>
  <body>
  <% if session[:error] %>
    <p><%= session.delete :error %></p>
  <% end %>
    <ul>
    <% @files.each do |file| %>
      <li>
        <a href="<%= "/#{file}" %>">
          <%= file %>
        </a>
      </li>
    <% end %>
    </ul>
  </body>
</html>
