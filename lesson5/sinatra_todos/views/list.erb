<section id="todos">
  <header>
    <h2><%= @list[:name] %></h2>
    <ul>
      <li><a class="edit" href="/lists/<%= params[:list_id] %>/edit">Edit List</a></li>
    </ul>
  </header>

  <ul>
    <% @list[:todos].each_with_index do |todo, idx| %>
      <li>
        <h3><%= todo[:name] %></h3>
        <form action="/lists/<%= params[:list_id] %>/todos/<%= idx %>/delete" method="post" class="delete">
          <button type="submit">Delete</button>
        </form>
      </li>
    <% end %>
  </ul>
</section>

<% content_for :header_links do %>
  <a href="/lists">All Lists</a>
<% end %>

<form action="/lists/<%= params[:list_id] %>/todos" method="post">
  <dl>
    <dt>
      <label for="todo">Enter a new todo item:</label>
    </dt>
    <dd>
      <input name="todo" id="todo" type="text" autocomplete="off" placeholder="Todo text" value="<%= params[:todo] %>">
    </dd>
    </dl>
  <fieldset class="actions">
    <input type="submit" value="Add">
  </fieldset>
</form>
