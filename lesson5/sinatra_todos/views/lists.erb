<ul id="lists">
  <% @lists.each_with_index do |list, idx| %>
    <li <%= 'class="complete"' if all_todos_completed?(list) %>>
      <a href="lists/<%= idx %>">
        <h2><%= list[:name] %></h2>
        <p><%= not_complete_todo_count list %></p>
      </a>
    </li>
  <% end %>
</ul>

<% content_for :header_links do %>
  <a class="add" href="/lists/new">New List</a>
<% end %>
